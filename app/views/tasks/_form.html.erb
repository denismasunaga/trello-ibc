<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome%>
    <%= form.text_field :nome, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :descrição %>
    <%= form.text_area :descricao, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :etapa %>
    <%#= form.text_field :status, class: "form-control" %>
    <%= form.select :etapa_id, options_from_collection_for_select(@board.etapas, "id", "nome", task.etapa == nil ? @etapa.id : task.etapa.id), {}, {class: "form-control"} %>

  </div>

  <div class="actions">
    <%= form.submit 'Salvar task', class: "btn btn-primary" %>
  </div>
<% end %>
